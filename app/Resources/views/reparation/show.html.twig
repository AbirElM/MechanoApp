{% extends 'base.html.twig' %}

{% block body %}
    <h1>Reparation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id_rep</th>
                <td>{{ reparation.idrep }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{% if reparation.state %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ reparation.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reparation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('reparation_edit', { 'id_rep': reparation.idRep }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
